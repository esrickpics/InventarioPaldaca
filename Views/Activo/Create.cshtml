@using InventarioPaldaca.Models.ViewModels
@model ActivoViewModel

@section Styles {
    <link rel="stylesheet" href="~/css/Create.css">
    <link rel="stylesheet"
          href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />
}
<div class="form-container">
    <h2 class="form-title">Crear Nuevo Activo</h2>
    <hr class="linea"/>

    <form asp-action="Create" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <!-- Marca -->
        <div class="form-group">
            <label asp-for="Marca"></label>
            <input asp-for="Marca" class="form-control" />
            <span asp-validation-for="Marca" class="text-danger"></span>
        </div>

        <!-- Modelo -->
        <div class="form-group">
            <label asp-for="Modelo"></label>
            <input asp-for="Modelo" class="form-control" />
            <span asp-validation-for="Modelo" class="text-danger"></span>
        </div>

        <!-- Número de Serial -->
        <div class="form-group">
            <label asp-for="NumeroSerial"></label>
            <input asp-for="NumeroSerial" class="form-control" />
            <span asp-validation-for="NumeroSerial" class="text-danger"></span>
        </div>

        <!-- Funcionalidad -->
        <div class="form-group">
            <label asp-for="Funcionabilidad"></label>
            <div class="radio-group">
                <input type="radio" asp-for="Funcionabilidad" class="form-check-input" name="Funcionabilidad" value="true" /> Sí
                <input type="radio" asp-for="Funcionabilidad" class="form-check-input" name="Funcionabilidad" value="false" /> No
            </div>
            <span asp-validation-for="Funcionabilidad" class="text-danger"></span>
        </div>

        <!-- Observaciones -->
        <div class="form-group">
            <label asp-for="Observaciones"></label>
            <textarea asp-for="Observaciones" class="form-control"></textarea>
            <span asp-validation-for="Observaciones" class="text-danger"></span>
        </div>

        <!-- Código de Inventario -->
        <div class="form-group">
            <label asp-for="CodigoInventario"></label>
            <input asp-for="CodigoInventario" class="form-control" />
            <span asp-validation-for="CodigoInventario" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="AñoAdquirido"></label>
            <input asp-for="AñoAdquirido" class="form-control" />
            <span asp-validation-for="AñoAdquirido" class="text-danger"></span>
        </div>

        <!-- Opciones adicionales -->
        <div class="option-group">
            
            <div class="form-group">
                <label asp-for="CategoriaId"></label>
                <div class="input-group">
                    <select asp-for="CategoriaId" class="form-control" asp-items="ViewBag.Categoria"></select>
                    <div class="input-group-append">
                        <a asp-action="Create" asp-controller="Categoria" class="btn btn-outline-secondary">Nueva Categoría</a>
                    </div>
                </div>
                <span asp-validation-for="CategoriaId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="UbicacionId"></label>
                <div class="input-group">
                    <select asp-for="UbicacionId" class="form-control" asp-items="ViewBag.Ubicacion"></select>
                    <div class="input-group-append">
                        <a asp-action="Create" asp-controller="Ubicacion" class="btn btn-outline-secondary">Nueva Ubicación</a>
                    </div>
                </div>
                <span asp-validation-for="UbicacionId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="UsuarioId"></label>
                <div class="input-group">
                    <select asp-for="UsuarioId" class="form-control selectusuario" asp-items="ViewBag.Usuario"></select>
                    <div class="input-group-append">
                        <a asp-action="Create" asp-controller="Usuario" class="btn btn-outline-secondary ">Nuevo Usuario</a>
                    </div>
                </div>
                <span asp-validation-for="UsuarioId" class="text-danger"></span>
            </div>
        </div>
        <hr class="linea" />
        <!-- Botón de crear -->
        <div class="form-group">
            <input type="submit" value="Crear" class="btn btn-primary" />
        </div>
    </form>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

