<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] Inventario Paldaca</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.4.0/jspdf.umd.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf-autotable/3.5.21/jspdf.plugin.autotable.min.js"></script>
    <link rel="icon" type="image/x-icon" href="~/img/Paldaca Icon.png">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/normalize.css" asp-append-version="true" />
    @RenderSection("Styles", required: false)
</head>
<body class="d-flex flex-column min-vh-100">
    <header class="bg-opacity-10 bgcolor text-white py-3 px-4">
        <div class="container d-flex justify-content-between align-items-center">
            <nav class="d-none d-md-flex">
                <a asp-area="" asp-controller="Home" asp-action="Index" class="text-white text-decoration-none me-4">Inicio</a>
                <a asp-area="" asp-controller="Activo" asp-action="Index" class="text-white text-decoration-none me-4">Activos</a>             
                <a asp-area="" asp-controller="Usuario" asp-action="Index" class="text-white text-decoration-none m me-4">Usuarios</a>
            </nav>
        </div>
    </header>
    <div class="headercontainer"> 
        <a asp-area="" asp-controller="Home" asp-action="Index" class="text-decoration-none d-flex align-items-center">
            <img src="~/img/paldaca_logo-header-2.png" class="logoheader" />
        </a>
    </div>
    <main class="flex-fill py-5 mb-5">
        <div class="container">
            @RenderBody()
        </div>
    </main>
    <footer class="bgcolor text-white py-3 border-top footer mt-5">
        <div class="container d-flex justify-content-between align-items-center">
            <a asp-area="" asp-controller="Home" asp-action="Index" class="headercontainer">
                <img src="~/img/paldaca_logo-header-2.png" />
            </a>
            <nav class="d-none d-md-flex">
                <a asp-area="" asp-controller="Home" asp-action="Index" class="text-white text-decoration-none me-4">Inicio</a>
                <a asp-area="" asp-controller="Activo" asp-action="Index" class="text-white text-decoration-none me-4">Activos</a>
                <a asp-area="" asp-controller="Usuario" asp-action="Index" class="text-white text-decoration-none me-4">Usuarios</a>
                <a href="https://paldaca.com/" class="text-white text-decoration-none me-4">Contact</a>
            </nav>
        </div>
    </footer>
    @RenderSection("Scripts", required: false)
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
